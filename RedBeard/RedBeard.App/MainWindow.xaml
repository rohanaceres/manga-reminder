<Window x:Class="RedBeard.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedBeard.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="uxTbxEmail" />
            <TextBox Name="uxTbxLink" />
            <Button Name="uxBtnAddEntry" Content="Adicionar" Click="OnAddEntry"/>

            <Grid>
                <ListView x:Name="listView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Button Name="uxBtnStart" Content="Iniciar" Click="OnStart" />
        </StackPanel>
    </Grid>
</Window>
